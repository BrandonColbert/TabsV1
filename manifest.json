{
	"manifest_version": 2,
	"name": "Tabs+",
	"version": "0.1.6",
	"description": "Extends Chrome's tab management capabilities",
	"incognito": "split",
	"permissions": [
		"activeTab",
		"contextMenus",
		"storage",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],
	"web_accessible_resources": [
		"js/*",
		"js/classes/*"
	],
	"background": {
		"page": "tabs.html",
		"presistent": false
	},
	"browser_action": {
		"default_title": "Tabs!",
		"default_popup": "menu.html",
		"default_icon": {
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"all_frames": true,
		"js": ["js/page_content.js"]
	}],
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	}
}